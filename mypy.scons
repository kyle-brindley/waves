#! /usr/bin/env python
"""Configure the MyPy static type checking workflow."""

# Inherit the parent construction environment
Import("env")

pyproject = env.FindFile("pyproject.toml", "#")

target = env.Command(
    target=["any-exprs.txt", "types-of-anys.txt"],
    source=[pyproject],
    action=["mypy --any-exprs-report ${TARGET.dir}"],
)
env.AlwaysBuild(target)
env.Alias("mypy", target)
