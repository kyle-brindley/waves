#! /usr/bin/env python

import waves


env = Environment()
env.AddMethod(waves.scons_extensions.parameter_study_write, "ParameterStudyWrite")

schema = {"one": [1, 2]}
one_file = waves.parameter_generators.CartesianProduct(
    schema,
    output_file="one_file.h5",
)
two_file = waves.parameter_generators.CartesianProduct(
    schema,
    output_file_template="two_file@number.h5",
)

env.ParameterStudyWrite(
    one_file,
)
# Remove never execute logic when fixing the output file type bug
# https://re-git.lanl.gov/aea/python-projects/waves/-/issues/860
if False:
    yaml = env.ParameterStudyWrite(
        one_file,
        output_file_type="yaml",
    )

env.ParameterStudyWrite(
    two_file,
)
# Remove never execute logic when fixing the output file type bug
# https://re-git.lanl.gov/aea/python-projects/waves/-/issues/860
if False:
    yaml = env.ParameterStudyWrite(
        two_file,
        output_file_type="yaml",
    )
